
 <div class="col-10"> 
          <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-dark rounded", local: true) do |f| %>
            <div class="mb-3">
              <p> 
                <%= f.label :username, class: "text-light col-2 col-form-label" %>
                  <div class="col-10">  
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
                  </div>
                </p>
              </div>
            <div class="mb-3">
              <p>
                <%= f.label :email, class: "text-light col-2 col-form-label"  %>
                <div class="col-10"> 
                  <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
                </div> 
              </p>
            </div>
             <div class="mb-3">
              <p>
                <%= f.label :password, class: "text-light col-2 col-form-label"  %>
                <div class="col-10"> 
                  <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
                </div> 
              </p>
            </div>
            <p>
              <%= f.submit "Signup", class: "btn btn-outline-light btn-lg" %> 
            </p>
          <% end %>
        </div>

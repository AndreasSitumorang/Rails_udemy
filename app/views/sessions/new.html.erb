<h1 class="text-center mt-4">Log in</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10"><%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 bg-dark rounded", local: true) do |f| %>
      <div class="mb-3">
        <p><%= f.label :email, class: "text-light col-2 col-form-label"  %>
          <div class="col-10"><%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
          </div>
        </p>
      </div>
      <div class="mb-3">
        <p><%= f.label :password, class: "text-light col-2 col-form-label"  %>
          <div class="col-10"><%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
          </div>
        </p>
      </div>
      <p><%= f.submit "Login", class: "btn btn-outline-light btn-lg" %>
      </p><% end %>
    </div>
  </div>
</div>
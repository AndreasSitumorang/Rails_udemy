<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Ruby Udemy Test</title>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Heebo:400,500,700|Playfair+Display:700" rel="stylesheet">
  <link rel="stylesheet" href="dist/css/style.css">
  <script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head> 


  <div id="page-content">
    <div class="body-wrap boxed-container">
      <div class="container">
      <h1 style="text-align:left" class="mt-4">List of News</h1>

      <% @all_news.each do |news| %>
        <div class="row justify-content-md-center">
          <div class="col-8">
            <div class="shadow p-3 mb-5 bg-white rounded">
              <div class="card">
                <div class="card-header">
                  <p class="fst-italic text-muted">Current User</p>
                </div>
                <div class="card-body">
                  <h5 class="fs-2 text-success"><%= news.headline %></h5>
                  <p class="fs-4"><%= truncate(news.information, length:100) %></p>

                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                      <%= button_to 'Show', dailynews_path(news), class: "btn btn-primary", method: :get, data: { confirm: 'Are you sure?' } %>
                      <%= button_to 'Edit', edit_dailynews_path(news), class: "btn btn-secondary", method: :get %>
                      <%= button_to 'Delete', dailynews_path(news), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?"} %>
                    </div>
                    
                </div>
                <div class="card-footer text-muted">
                    <small> 
                      Create at <%= time_ago_in_words(news.created_at) %> and Edit at
                      <%= time_ago_in_words(news.updated_at) %></small>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %> 

        <table class="table table-sm">
        <thead>
          <tr>
            <th>Headline</th>
            <th>Information</th>
            <th colspan="3" class="text-center"> Action</th>
          </tr>
        </thead>

        <tbody>
          <% @all_news.each do |news| %>
          <tr>
            <td style="text-align:left"><%= news.headline %></td>
            <td style="text-align:left"><%= news.information %></td>
              
            <td><%= button_to 'Show', dailynews_path(news), class: "btn btn-primary", method: :get, data: { confirm: 'Are you sure?' } %></td>
            <td><%= button_to 'Edit', edit_dailynews_path(news), class: "btn btn-secondary", method: :get %></td>
            <td><%= button_to 'Delete', dailynews_path(news), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?"} %></td>
          </tr>
          <% end %> 
        </tbody>
        </table>


        <h2 style="text-align:left"><%= link_to 'Create', new_dailynews_path(@all_news) %></h2>
      </div>
    </div>
  </div>

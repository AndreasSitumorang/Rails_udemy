<h1>News for Today</h1>

<table>
  <thead>
    <tr>
      <th>Headline</th>
      <th>Information</th>
      <th colspan="3"> Action</th>
    </tr>
  </thead>

  <tbody>
    <% @all_news.each do |news| %>
    <tr>
      <td><%= news.headline %></td>
      <td><%= news.information %></td>
        
      <td><%= button_to 'Show', dailynews_path(news), method: :get, data: { confirm: 'Are you sure?' } %></td>
      <td><%= button_to 'Edit', edit_dailynews_path(news), method: :get %></td>
      <td><%= button_to 'Delete', dailynews_path(news), method: :delete, data: { confirm: "Are you sure?"} %></td>
    </tr>
    <% end %> 
  </tbody>
</table>


<p>
  <h2><%= link_to 'Create', new_dailynews_path(@all_news) %></h2>
</p>